<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/setting_dialog_width"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/setting_dialog_content_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/room_id"
                android:textColor="@color/black"
                android:textSize="@dimen/setting_dialog_title_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/setting_dialog_description_vertical_margin"
                android:textColor="@color/black"
                android:text="@string/dialog_description"
                android:textSize="@dimen/setting_dialog_description_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="@string/dialog_id_label"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/setting_dialog_input_text_hint_text_size"  />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_room_id_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/id_input_border"
                android:inputType="number"
                android:padding="@dimen/setting_dialog_dialog_input_padding"
                android:singleLine="true"
                android:textSize="@dimen/setting_dialog_dialog_input_text_size"
                android:textColor="@color/black" />


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="end"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_change_room_id_dialog_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="@string/dialog_cancel_button"
                    android:textColor="@color/red"
                    android:textSize="@dimen/setting_dialog_dialog_button_text_size" />

                <Button
                    android:id="@+id/btn_change_room_id_dialog_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="@string/dialog_save_button"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/setting_dialog_dialog_button_text_size" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

</LinearLayout>