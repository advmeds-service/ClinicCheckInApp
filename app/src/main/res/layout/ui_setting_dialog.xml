<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/setting_dialog_width"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_normal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ui_settings_dialog_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ui_settings"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_h2" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ui_settings_dialog_input_field"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/ui_settings_machine_title"
                    android:singleLine="true"
                    android:textColor="@color/black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_h4" />

                </com.google.android.material.textfield.TextInputLayout>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/ui_settings_manual_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/setting_dialog_check_box_margin_start"
                            android:layout_marginTop="@dimen/setting_dialog_check_box_margin_top"
                            android:layout_marginEnd="@dimen/setting_dialog_check_box_margin_end"
                            android:layout_marginBottom="@dimen/setting_dialog_check_box_margin_bottom"
                            android:gravity="center"
                            android:scaleX="@dimen/check_box_scale"
                            android:scaleY="@dimen/check_box_scale" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ui_settings_manual_input"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_h4" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/ui_settings_virtual_nhi_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/setting_dialog_check_box_margin_start"
                            android:layout_marginTop="@dimen/setting_dialog_check_box_margin_top"
                            android:layout_marginEnd="@dimen/setting_dialog_check_box_margin_end"
                            android:layout_marginBottom="@dimen/setting_dialog_check_box_margin_bottom"
                            android:gravity="center"
                            android:scaleX="@dimen/check_box_scale"
                            android:scaleY="@dimen/check_box_scale" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ui_settings_virtual_nhi_card"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_h4" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/ui_settings_customized_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/setting_dialog_check_box_margin_start"
                            android:layout_marginTop="@dimen/setting_dialog_check_box_margin_top"
                            android:layout_marginEnd="@dimen/setting_dialog_check_box_margin_end"
                            android:layout_marginBottom="@dimen/setting_dialog_check_box_margin_bottom"
                            android:gravity="center"
                            android:scaleX="@dimen/check_box_scale"
                            android:scaleY="@dimen/check_box_scale" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ui_settings_customized_one"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_h4" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <LinearLayout
                        android:id="@+id/ui_settings_customized_one_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/space_big"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ui_settings_customized_one_block_name"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/space_small"
                            android:layout_marginStart="@dimen/space_big"
                            android:hint="@string/ui_settings_customized_block_name"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_h4">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ui_settings_customized_one_doctor_id"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/space_small"
                            android:layout_marginStart="@dimen/space_big"
                            android:hint="@string/ui_settings_customized_doctor_id"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_h4">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ui_settings_customized_one_room_id"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/space_small"
                            android:layout_marginStart="@dimen/space_big"
                            android:hint="@string/ui_settings_customized_room_id"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_h4">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/ui_settings_customized_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/setting_dialog_check_box_margin_start"
                            android:layout_marginTop="@dimen/setting_dialog_check_box_margin_top"
                            android:layout_marginEnd="@dimen/setting_dialog_check_box_margin_end"
                            android:layout_marginBottom="@dimen/setting_dialog_check_box_margin_bottom"
                            android:gravity="center"
                            android:scaleX="@dimen/check_box_scale"
                            android:scaleY="@dimen/check_box_scale" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ui_settings_customized_two"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_h4" />

                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <LinearLayout
                        android:id="@+id/ui_settings_customized_two_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/space_big"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ui_settings_customized_two_block_name"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/space_small"
                            android:layout_marginStart="@dimen/space_big"
                            android:hint="@string/ui_settings_customized_block_name"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_h4">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ui_settings_customized_two_doctor_id"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/space_small"
                            android:layout_marginStart="@dimen/space_big"
                            android:hint="@string/ui_settings_customized_doctor_id"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_h4">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ui_settings_customized_two_room_id"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/space_small"
                            android:layout_marginStart="@dimen/space_big"
                            android:hint="@string/ui_settings_customized_room_id"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_h4">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/ui_settings_customized_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/setting_dialog_check_box_margin_start"
                            android:layout_marginTop="@dimen/setting_dialog_check_box_margin_top"
                            android:layout_marginEnd="@dimen/setting_dialog_check_box_margin_end"
                            android:layout_marginBottom="@dimen/setting_dialog_check_box_margin_bottom"
                            android:gravity="center"
                            android:scaleX="@dimen/check_box_scale"
                            android:scaleY="@dimen/check_box_scale" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ui_settings_customized_three"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_h4" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <LinearLayout
                        android:id="@+id/ui_settings_customized_three_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/space_big"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ui_settings_customized_three_block_name"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/space_small"
                            android:layout_marginStart="@dimen/space_big"
                            android:hint="@string/ui_settings_customized_block_name"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_h4">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ui_settings_customized_three_doctor_id"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/space_small"
                            android:layout_marginStart="@dimen/space_big"
                            android:hint="@string/ui_settings_customized_doctor_id"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_h4">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ui_settings_customized_three_room_id"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/space_small"
                            android:layout_marginStart="@dimen/space_big"
                            android:hint="@string/ui_settings_customized_room_id"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_h4">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/ui_settings_customized_four"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/setting_dialog_check_box_margin_start"
                            android:layout_marginTop="@dimen/setting_dialog_check_box_margin_top"
                            android:layout_marginEnd="@dimen/setting_dialog_check_box_margin_end"
                            android:layout_marginBottom="@dimen/setting_dialog_check_box_margin_bottom"
                            android:gravity="center"
                            android:scaleX="@dimen/check_box_scale"
                            android:scaleY="@dimen/check_box_scale" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ui_settings_customized_four"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_h4" />

                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <LinearLayout
                        android:id="@+id/ui_settings_customized_four_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/space_big"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ui_settings_customized_four_block_name"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/space_small"
                            android:layout_marginStart="@dimen/space_big"
                            android:hint="@string/ui_settings_customized_block_name"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_h4">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ui_settings_customized_four_doctor_id"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/space_small"
                            android:layout_marginStart="@dimen/space_big"
                            android:hint="@string/ui_settings_customized_doctor_id"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_h4">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ui_settings_customized_four_room_id"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/space_small"
                            android:layout_marginStart="@dimen/space_big"
                            android:hint="@string/ui_settings_customized_room_id"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_h4">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/ui_settings_cancel_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@string/dialog_cancel_button"
                        android:textColor="@color/red"
                        android:textSize="@dimen/font_size_h3" />

                    <Button
                        android:id="@+id/ui_settings_save_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@string/dialog_save_button"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_size_h3" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>