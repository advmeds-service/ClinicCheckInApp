<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/setting_dialog_width"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/setting_dialog_content_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/queueing_board_setting"
                    android:textColor="@color/black"
                    android:textSize="@dimen/setting_dialog_title_text_size"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginVertical="@dimen/setting_dialog_switcher_content_top_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dialog_enable_label"
                        android:textColor="@color/black"
                        android:textSize="@dimen/setting_dialog_switcher_label_text_size" />


                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/queueing_board_setting_switcher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:saveEnabled="true"
                        android:scaleX="@dimen/setting_dialog_switcher_scale"
                        android:scaleY="@dimen/setting_dialog_switcher_scale" />

                </LinearLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/queueing_board_setting_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/setting_dialog_title_vertical_margin"
                            android:text="@string/qbs_screen_rotation_label"
                            android:textColor="@color/black"
                            android:textSize="@dimen/setting_dialog_sub_title_text_size" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/ExposedDropdownMenuGray"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:boxCornerRadiusBottomEnd="10dp"
                                app:boxCornerRadiusBottomStart="10dp"
                                app:boxCornerRadiusTopEnd="10dp"
                                app:boxCornerRadiusTopStart="10dp"
                                app:boxStrokeColor="#e0e0e0"
                                app:boxStrokeWidth="4dp">

                                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                    android:id="@+id/queueing_board_setting_auto_complete_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/setting_dialog_dropdown_text_size"
                                    android:clickable="false"
                                    android:cursorVisible="false"
                                    android:focusable="false"
                                    android:inputType="none" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />
                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:text="@string/dialog_url_label"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/setting_dialog_input_text_hint_text_size" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_qbs_irl_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/id_input_border"
                        android:padding="@dimen/setting_dialog_dialog_input_padding"
                        android:singleLine="true"
                        android:textSize="@dimen/setting_dialog_dialog_input_text_size"
                        android:textColor="@color/black"/>



                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="@dimen/setting_dialog_bottom_margin"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_qbs_dialog_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@string/dialog_cancel_button"
                        android:textColor="@color/red"
                        android:textSize="@dimen/setting_dialog_dialog_button_text_size"/>

                    <Button
                        android:id="@+id/btn_qbs_dialog_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@string/dialog_save_button"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/setting_dialog_dialog_button_text_size" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>