<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:clipToPadding="false"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="@dimen/screen_padding"
    tools:context=".ui.inputPage.InputPageFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/top_card_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/logo_margin"
        android:layout_weight="1"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/logo_imageView"
                android:layout_width="@dimen/logo_image_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/logo_image_margin"
                android:layout_marginBottom="@dimen/logo_image_margin"
                app:srcCompat="@drawable/clinic_logo_default" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="start"
                android:lines="1"
                android:text="@string/app_name_title_in_home_fragment"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/logo_text_size" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_card_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/screen_panel_margin"
        android:layout_weight="4"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/id_input_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/input_page_input_title_top_margin"
                    android:lines="1"
                    android:textAlignment="center"
                    android:textSize="@dimen/input_page_panel_title"
                    tools:text="@string/national_id_input_title" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/id_input_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/input_page_input_et_horizontal_margin"
                    android:layout_marginTop="@dimen/input_page_input_et_vertical_margin"
                    android:layout_marginEnd="@dimen/input_page_input_et_horizontal_margin"
                    android:layout_marginBottom="@dimen/input_page_input_et_vertical_margin"
                    android:background="@drawable/id_input_border"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/national_id_input_hint"
                    android:inputType="textCapSentences"
                    android:padding="@dimen/input_page_input_et_padding"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textSize="@dimen/input_page_input_text_size" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/back_to_home_page_button"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/input_page_back_to_home_margin"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:paddingStart="@dimen/input_page_back_to_home_horizontal_padding"
                    android:paddingTop="@dimen/input_page_back_to_home_vertical_padding"
                    android:paddingEnd="@dimen/input_page_back_to_home_horizontal_padding"
                    android:paddingBottom="@dimen/input_page_back_to_home_vertical_padding"
                    android:text="@string/make_appointment_right_now"
                    android:textSize="@dimen/input_page_back_to_home_button_text_size"
                    app:backgroundTint="@color/alert"
                    app:cornerRadius="8dp"
                    tools:ignore="SpeakableTextPresentCheck" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/keyboard_background"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:padding="@dimen/input_page_keyboard_padding">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/en_pad_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:clipToPadding="true"
                    android:orientation="vertical"
                    android:padding="@dimen/input_page_alphabet_part">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:clipToPadding="false"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/a_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="A" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/b_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:layout_weight="1"
                            android:text="B" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/c_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:layout_weight="1"
                            android:text="C" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/d_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:layout_weight="1"
                            android:text="D" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/e_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:text="E" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/f_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:layout_weight="1"
                            android:text="F" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/g_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:layout_weight="1"
                            android:text="G" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:clipToPadding="false"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/h_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:layout_weight="1"
                            android:text="H" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/i_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="I" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/j_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="J" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/k_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="K" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/l_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="L" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/m_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="M" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/n_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="N" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:clipToPadding="false"
                        android:textSize="@dimen/input_page_key_text_size"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/o_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="O" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/p_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="P" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/q_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="Q" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/r_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="R" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/s_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="S" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/t_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="T" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/u_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="U" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:clipToPadding="false"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/v_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="V" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/w_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="W" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/x_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="X" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/y_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="Y" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/z_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="Z" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/dash_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="-" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:visibility="invisible" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/number_pad_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:clipToPadding="false"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/one_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="1" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/two_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="2" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/three_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="3" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:clipToPadding="false"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/four_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="4" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/five_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="5" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/six_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="6" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:clipToPadding="false"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/seven_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="7" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/eight_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="8" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/nine_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="9" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:clipToPadding="false"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:visibility="invisible" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/zero_button"
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/input_page_key_text_size"
                            android:text="0" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/MyApp.Keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:visibility="invisible" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="6dp"
                        android:layout_weight="1"
                        android:translationZ="2dp"
                        app:cardBackgroundColor="@color/error"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="1dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/backspace_button"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/input_page_clear_symbol_button_image_width"
                                    android:layout_height="@dimen/input_page_clear_symbol_button_image_height"
                                    android:layout_gravity="center_horizontal"
                                    app:srcCompat="@drawable/ic_baseline_backspace" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
