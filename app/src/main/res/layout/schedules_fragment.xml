<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingStart="@dimen/schedules_dialog_screen_padding"
    android:paddingEnd="@dimen/schedules_dialog_screen_padding">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:translationZ="4dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/schedules_dialog_panel_horizontal_padding"
            android:paddingTop="@dimen/schedules_dialog_panel_vertical_padding"
            android:paddingEnd="@dimen/schedules_dialog_panel_horizontal_padding"
            android:paddingBottom="@dimen/schedules_dialog_panel_vertical_padding">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/schedules_dialog_schedules_image_width"
                android:layout_height="@dimen/schedules_dialog_schedules_image_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/schedules_dialog_schedules_image_bottom_margin"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_open_select_hand_gesture" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fragment_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/schedules_dialog_title_bottom_margin"
                android:fontFamily="sans-serif-medium"
                android:text="@string/select_schedules_title"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/schedules_dialog_title_text_size" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/schedules_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/schedules_dialog_recycler_bottom_margin"
                android:layout_weight="1"
                android:padding="@dimen/schedules_dialog_recycler_padding"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3"
                tools:itemCount="4"
                tools:listitem="@layout/schedule_item" />

            <LinearLayout
                android:id="@+id/action_buttons_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancel_button"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/schedules_dialog_button_horizontal_padding"
                    android:paddingTop="@dimen/schedules_dialog_button_vertical_padding"
                    android:paddingEnd="@dimen/schedules_dialog_button_horizontal_padding"
                    android:paddingBottom="@dimen/schedules_dialog_button_vertical_padding"
                    android:text="@string/cancel"
                    android:textSize="@dimen/schedules_dialog_button_text_size"
                    app:cornerRadius="8dp"
                    app:strokeColor="@color/colorPrimary"
                    app:strokeWidth="2dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/confirm_button"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/schedules_dialog_button_horizontal_padding"
                    android:paddingTop="@dimen/schedules_dialog_button_vertical_padding"
                    android:paddingEnd="@dimen/schedules_dialog_button_horizontal_padding"
                    android:paddingBottom="@dimen/schedules_dialog_button_vertical_padding"
                    android:text="@string/confirm"
                    android:textSize="@dimen/schedules_dialog_button_text_size"
                    app:cornerRadius="8dp"
                    app:elevation="0dp" />

            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>