<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingStart="@dimen/check_in_dialog_screen_padding"
    android:paddingEnd="@dimen/check_in_dialog_screen_padding">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:translationZ="4dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/check_in_dialog_panel_horizontal_padding"
            android:paddingTop="@dimen/check_in_dialog_panel_vertical_padding"
            android:paddingEnd="@dimen/check_in_dialog_panel_horizontal_padding"
            android:paddingBottom="@dimen/check_in_dialog_panel_vertical_padding">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/check_in_dialog_how_to_reg_image_width"
                android:layout_height="@dimen/check_in_dialog_how_to_reg_image_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/check_in_dialog_how_to_reg_image_bottom_margin"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_baseline_how_to_reg" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fragment_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/check_in_dialog_title_bottom_margin"
                android:fontFamily="sans-serif-medium"
                android:text="@string/make_appointment"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/check_in_dialog_title_text_size" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fragment_message_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/check_in_dialog_message_bottom_margin"
                android:fontFamily="sans-serif-medium"
                android:text="@string/make_appointment_message"
                android:textAlignment="center"
                android:textColor="@color/schedule_toggle_text_color"
                android:textSize="@dimen/check_in_dialog_message_text_size" />


            <LinearLayout
                android:id="@+id/action_buttons_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/got_it_button"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/check_in_dialog_button_horizontal_padding"
                    android:paddingTop="@dimen/check_in_dialog_button_vertical_padding"
                    android:paddingEnd="@dimen/check_in_dialog_button_horizontal_padding"
                    android:paddingBottom="@dimen/check_in_dialog_button_vertical_padding"
                    android:text="@string/got_it"
                    android:textSize="@dimen/check_in_dialog_button_text_size"
                    app:cornerRadius="8dp"
                    app:elevation="0dp" />

            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>