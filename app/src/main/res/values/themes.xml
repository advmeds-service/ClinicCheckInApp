<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ClinicCheckInApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="buttonBarPositiveButtonStyle">@style/MyApp.buttonBarButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyApp.buttonBarButtonStyle</item>
    </style>

    <style name="MyApp.DialogFragmentTheme" parent="Theme.ClinicCheckInApp">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TextAppearance.AppCompat.Title" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/font_size_h3</item>
    </style>
    <!-- AlertDialog Message TextAppearance -->
    <style name="TextAppearance.AppCompat.Subhead" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/font_size_h4</item>
    </style>

    <!-- AlertDialog Button Style -->
    <style name="MyApp.buttonBarButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textSize">@dimen/font_size_h5</item>
    </style>

    <style name="MyApp.Keyboard" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">6dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="elevation">1dp</item>
        <item name="android:translationZ">2dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/font_size_h4</item>
        <item name="android:textColor">@color/keyboard_text_color</item>
    </style>

    <!-- Text Input Layout -->
    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="TextInputLayoutHintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/font_size_h4</item>
    </style>

</resources>